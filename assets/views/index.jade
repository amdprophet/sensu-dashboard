doctype
html(lang="en" ng-app="sensuApp")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
    title Sensu Dashboard
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(name="author" content="Justin Kolberg")
    meta(name="Copyright" content="Copyright Sonian, Inc. 2014. MIT License.")
    //- standard favicon
    link(rel="icon" type="image/png" href="img/favicon_64.png")
    //- favicon for iPhone
    link(rel="apple-touch-icon" type="image/png" href="img/favicon_57.png")
    //- favicon for Retina iPhone
    link(rel="apple-touch-icon" type="image/png" href="img/favicon_114.png" sizes="114x114")
    //- favicon for iPad
    link(rel="apple-touch-icon" type="image/png" href="img/favicon_72.png" sizes="72x72")
    //- favicon for Retina iPad
    link(rel="apple-touch-icon" type="image/png" href="img/favicon_144.png" sizes="144x144")
    //- multi resolution favicon for IE
    link(rel="shortcut icon" href="favicon.ico")
    link(rel="stylesheet" href="css/vendor/bootstrap/bootstrap.css")
    link(rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.1.0/css/font-awesome.min.css")
    link(rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Lato:300,400,700")
    link(rel="stylesheet" type="text/css" href="css/app.css")
  body(ng-controller="MainController")
    #masterUI(ui-view="master")
      #navbarUI(ui-view="navbar")
      #contentUI(ui-view="content")

  script(src="js/vendor/jquery/jquery.js")
  script(src="js/vendor/bootstrap/bootstrap.js")
  script(src="js/vendor/angular/angular.js")
  script(src="js/vendor/angular-animate/angular-animate.js")
  script(src="js/vendor/angular-resource/angular-resource.js")
  script(src="js/vendor/angular-ui-router/angular-ui-router.js")
  script(src="js/app.js")
