.container-fluid
  .row-fluid
    .col-lg-12
      h1 Events
  .row
  #events-list.list
    .event-columns.row-fluid
      .col-sm-4
        h3.critical Critical
        .event-items
          .event-item(ng-repeat="event in events | eventStatus:'critical'" data-toggle="collapse" data-parent=".event-items" href="#collapse-{{ event.id }}")
            .row-fluid
              .col-xs-4
                i.fa.fa-volume-up.fa-fw
                span {{ event.client.name }}
              .col-xs-4
                i.fa.fa-volume-off.fa-fw
                span {{ event.check.name }}
              .col-xs-4
                span {{ event.check.executed | date }}
              .clearfix
            .row-fluid.collapse(id="collapse-{{ event.id }}")
              .col-xs-12
                p {{ event.check.output }}
                .clearfix
              .clearfix
      .col-sm-4
